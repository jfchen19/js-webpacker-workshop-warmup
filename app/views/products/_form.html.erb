<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :money %>
    <%= form.text_field :money, class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :start_at %>
    <%= form.datetime_select :start_at, class: "custom-select mr-sm-2" %>
  </div>

  <div class="field">
    <%= form.label :end_at %>
    <%= form.datetime_select :end_at, class: "custom-select" %>
  </div>

  <div class="field">
    <%= form.label :currency %>
    <select name="product[currency]" class="form-control js-example-basic-single">
      <option value="NTD">NTD</option>
      <option value="USD">USD</option>
      <option value="HKD">HKD</option>
    </select>
  </div>

  <div class="field">
    <%= form.label :tag_list %>
    <select name="product[tag_list][]" multiple= 'true' class="form-control js-example-tags">
      <option value="tag1">tag1</option>
      <option value="tag2">tag2</option>
      <option value="tag3">tag3</option>
      <%= options_for_select( form.object.tag_list, form.object.tag_list)
       %>
    </select>
  </div>
  <div class="actions btn-submit">
    <%= form.submit %>
  </div>
<% end %>
